<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMain"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginVertical">@dimen/marg_8</item>
        <item name="android:layout_marginHorizontal">@dimen/marg_16</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextButtonSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="head_back">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="BackgraundSettings">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="head_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="swith_onoff">
        <item name="android:thumbTint">@color/trumb</item>
        <item name="android:trackTint">@color/track</item>
    </style>
    <style name="serch_line">
        <item name="android:drawableTint">@color/trumb</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="svap_color_b_w">
        <item name="android:src">@drawable/back</item>
    </style>
    <style name="TextTrackName">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_track_search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
    <style name="text_error_search">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>